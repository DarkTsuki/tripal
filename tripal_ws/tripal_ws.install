<?php

/**
 * Implementation of hook_schema().
 *
 * @ingroup tripal
 */
function tripal_ws_schema() {
  $schema = array();
  $schema['tripal_sites'] = tripal_ws_tripal_sites_schema();
  return $schema;
}


/**
 *
 * @ingroup tripal_db
 */
function tripal_db_init() {

  // add the tripal_db JS and CSS
  drupal_add_css(drupal_get_path('theme', 'tripal') . '/css/tripal_db.css');
  drupal_add_js(drupal_get_path('theme', 'tripal') . '/js/tripal_db.js');
}
